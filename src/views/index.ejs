<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Add Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <script type="module" src="/js/index.js"></script>
</head>
<body class="bg-[#0b5394] min-h-screen">
  <%- include('partials/navbar') %>
  
  <div class="container mx-auto px-4 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
        Our Tech Stack
      </h1>
      <p class="text-xl text-[#f9f9f9]">
        Built with modern technologies for optimal performance
      </p>
    </div>

    <!-- Cards Container -->
    <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
      <!-- Backend Card -->
      <div class="bg-white rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
        <div class="p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Backend Technologies</h2>
          <div class="space-y-6">
            <!-- Node.js -->
            <div class="flex items-center justify-between group">
              <div>
                <h3 class="text-xl font-semibold text-gray-700 group-hover:text-blue-600 transition-colors">Node.js</h3>
                <p class="text-gray-600">Server-side JavaScript runtime</p>
              </div>
              <i class="fab fa-node text-5xl text-green-600 group-hover:scale-110 transition-transform"></i>
            </div>
            
            <!-- AWS -->
            <div class="flex items-center justify-between group">
              <div>
                <h3 class="text-xl font-semibold text-gray-700 group-hover:text-blue-600 transition-colors">AWS DynamoDB</h3>
                <p class="text-gray-600">NoSQL database service</p>
              </div>
              <i class="fab fa-aws text-5xl text-orange-500 group-hover:scale-110 transition-transform"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- Frontend Card -->
      <div class="bg-white rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
        <div class="p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Frontend Technologies</h2>
          <div class="space-y-6">
            <!-- JavaScript -->
            <div class="flex items-center justify-between group">
              <div>
                <h3 class="text-xl font-semibold text-gray-700 group-hover:text-blue-600 transition-colors">JavaScript</h3>
                <p class="text-gray-600">Core programming language</p>
              </div>
              <i class="fab fa-js text-5xl text-yellow-400 group-hover:scale-110 transition-transform"></i>
            </div>
            
            <!-- Tailwind -->
            <div class="flex items-center justify-between group">
              <div>
                <h3 class="text-xl font-semibold text-gray-700 group-hover:text-blue-600 transition-colors">Tailwind CSS</h3>
                <p class="text-gray-600">Utility-first CSS framework</p>
              </div>
              <svg class="w-12 h-12 text-teal-500 group-hover:scale-110 transition-transform" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 6C7.03 6 3 8.16 3 11c0 1.34 1.23 2.5 3 3.26V19l2-2v-2.14c1.3.47 2.6.714 4 .714 4.97 0 9-2.16 9-5s-4.03-5-9-5zm0 8c-1.32 0-2.57-.214-3.75-.6.98-1.17 2.29-2.14 3.75-2.14s2.77.97 3.75 2.14c-1.18.386-2.43.6-3.75.6z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Footer -->
    <footer class="bg-gray-799 text-white py-6"></footer>
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="mb-4 md:mb-0">
                    <p class="text-sm text-white">&copy; 2024 Your Company. All rights reserved.</p>
                </div>
                <div class="flex space-x-6">
                    <a href="https://github.com/Natey71" class="text-black hover:text-white transition-colors">
                        <i class="fab fa-github text-2xl"></i>
                    </a>
                    <a href="#" class="text-black hover:text-white transition-colors">
                        <i class="fab fa-linkedin text-2xl"></i>
                    </a>
                    <a href="#" class="text-black hover:text-white transition-colors">
                        <i class="fab fa-twitter text-2xl"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
