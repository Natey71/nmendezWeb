<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Tailwind CSS -->
  <link href="/css/output.css" rel="stylesheet">
</head>
<body class="flex flex-col h-full">

  <!-- Navbar Partial -->
  <%- include('partials/navbar') %>

  <!-- Main Content -->
  <div class="flex-1 flex bg-white dark:bg-gray-900 flex-col items-center justify-center p-4">
    <button id="download" class="download bg-blue-500 dark:bg-gray-700 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4">
      Make Chart
    </button>
    <div class="w-full h-full">
      <canvas id="myChart" class="w-full h-full text-black dark:text-white"></canvas>
    </div>
  </div>


  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script type="module" src="node_modules/jquery/dist/jquery.min.js"></script> 
  <script type="module" src="/js/energyTransmission.js"></script>
