<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Multiple Dropdown Examples</title>
  <!-- Link to your custom CSS file -->
  <link rel="stylesheet" href="/css/dropDown.css" />
  <!-- ====== CSS Libraries ====== -->
  <!-- Bootstrap (CSS) Called inside navbar and used in this page  -->
  <!-- jQuery UI CSS -->
  <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css" />
  <!-- Chosen CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css" />
  <!-- Select2 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
  <!-- SumoSelect CSS -->
  <link href="https://cdn.jsdelivr.net/npm/sumoselect@3.0.3/dist/sumoselect.min.css" rel="stylesheet" />
  <!-- TomSelect CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/css/tom-select.css"/>
</head>
<body>
    <%- include('partials/navbar') %>

  <h1>10 Different Dropdown Examples</h1>

  <!-- 1. Plain HTML select -->
  <div class="dropdown-example">
    <h2>1. Plain HTML Select</h2>
    <select>
      <option value="">Select an option</option>
      <option value="Option1">Option 1</option>
      <option value="Option2">Option 2</option>
      <option value="Option3">Option 3</option>
    </select>
  </div>

  <!-- 2. Basic custom CSS-only dropdown -->
  <div class="dropdown-example custom-dropdown-container">
    <h2>2. Custom CSS-Only (Hover)</h2>
    <div class="custom-dropdown">
      <button class="custom-dropdown-btn">Hover to Select</button>
      <div class="custom-dropdown-content">
        <a href="#">Option 1</a>
        <a href="#">Option 2</a>
        <a href="#">Option 3</a>
      </div>
    </div>
  </div>

  <!-- 3. Bootstrap dropdown -->
  <div class="dropdown-example">
    <h2>3. Bootstrap Dropdown</h2>
    <div class="btn-group">
      <button
        class="btn btn-secondary dropdown-toggle"
        type="button"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false"
      >
        Bootstrap Dropdown
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="#">Option 1</a>
        <a class="dropdown-item" href="#">Option 2</a>
        <a class="dropdown-item" href="#">Option 3</a>
      </div>
    </div>
  </div>

  <!-- 4. jQuery UI (selectmenu) -->
  <div class="dropdown-example">
    <h2>4. jQuery UI Selectmenu</h2>
    <select id="jquery-ui-dropdown">
      <option>Option 1</option>
      <option>Option 2</option>
      <option>Option 3</option>
    </select>
  </div>

  <!-- 5. Chosen -->
  <div class="dropdown-example">
    <h2>5. Chosen Dropdown</h2>
    <select class="chosen-select" style="width:200px;">
      <option>Option 1</option>
      <option>Option 2</option>
      <option>Option 3</option>
    </select>
  </div>

  <!-- 6. Select2 -->
  <div class="dropdown-example">
    <h2>6. Select2</h2>
    <select class="select2-example" style="width:200px;">
      <option value="Option1">Option 1</option>
      <option value="Option2">Option 2</option>
      <option value="Option3">Option 3</option>
    </select>
  </div>

  <!-- 7. SumoSelect -->
  <div class="dropdown-example">
    <h2>7. SumoSelect (Multiple)</h2>
    <select class="sumoSelect" multiple>
      <option>Option 1</option>
      <option>Option 2</option>
      <option>Option 3</option>
      <option>Option 4</option>
    </select>
  </div>

  <!-- 8. Custom dropdown with pure JS -->
  <div class="dropdown-example custom-dropdown-container">
    <h2>8. Custom Dropdown (JavaScript Toggle)</h2>
    <div class="js-dropdown">
      <button class="js-dropdown-btn">Select an option</button>
      <div class="js-dropdown-content">
        <div class="js-dropdown-option">Option 1</div>
        <div class="js-dropdown-option">Option 2</div>
        <div class="js-dropdown-option">Option 3</div>
      </div>
    </div>
  </div>

  <!-- 9. TomSelect -->
  <div class="dropdown-example">
    <h2>9. TomSelect</h2>
    <select id="tom-select" multiple placeholder="Pick a car...">
      <option value="audi">Audi</option>
      <option value="bmw">BMW</option>
      <option value="tesla">Tesla</option>
      <option value="toyota">Toyota</option>
    </select>
  </div>

  <!-- 10. Another custom CSS-only dropdown -->
  <div class="dropdown-example custom-dropdown-container">
    <h2>10. Another Custom CSS-Only (Hover)</h2>
    <div class="custom-dropdown2">
      <button class="custom-dropdown2-btn">Hover to Select</button>
      <div class="custom-dropdown2-content">
        <a href="#">Option 1</a>
        <a href="#">Option 2</a>
        <a href="#">Option 3</a>
      </div>
    </div>
  </div>
  <!-- ====== JS Libraries ====== -->
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <!-- jQuery UI JS -->
  <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
  <!-- Chosen JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>
  <!-- Select2 JS -->
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
  <!-- SumoSelect JS -->
  <script src="https://cdn.jsdelivr.net/npm/sumoselect@3.0.3/dist/jquery.sumoselect.min.js"></script>
  <!-- TomSelect JS -->
  <script src="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/js/tom-select.complete.min.js"></script>

  <!-- ====== Custom JavaScript Initialization ====== -->
  <script>
    // jQuery UI (Selectmenu)
    $(function(){
      $("#jquery-ui-dropdown").selectmenu();
    });

    // Chosen
    $('.chosen-select').chosen();

    // Select2
    $('.select2-example').select2();

    // SumoSelect
    $('.sumoSelect').SumoSelect();

    // TomSelect
    new TomSelect('#tom-select', {
      create: false
    });

    // 8. Custom JavaScript-based dropdown
    const jsDropdown = document.querySelector('.js-dropdown');
    const jsDropdownBtn = jsDropdown.querySelector('.js-dropdown-btn');
    const jsDropdownContent = jsDropdown.querySelector('.js-dropdown-content');
    const jsDropdownOptions = jsDropdown.querySelectorAll('.js-dropdown-option');

    jsDropdownBtn.addEventListener('click', function() {
      jsDropdownContent.classList.toggle('show');
    });

    jsDropdownOptions.forEach(option => {
      option.addEventListener('click', function() {
        jsDropdownBtn.textContent = this.textContent;
        jsDropdownContent.classList.remove('show');
      });
    });

    // Close dropdown if clicked outside
    window.addEventListener('click', function(event) {
      if (!jsDropdown.contains(event.target)) {
        jsDropdownContent.classList.remove('show');
      }
    });
  </script>
</body>
</html>
